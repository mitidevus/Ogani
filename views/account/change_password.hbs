<div class="background-wrapper">

    <div class="auth-wrapper">
        <form method="post" class="auth-form">
            <h3>Change Password</h3>

            {{#if error}}
                <p class="auth-error">{{error}}</p>
            {{/if}}

            <div class="form-group">
                <input name="id" type="hidden" value={{user.user_Id}} />
            </div>

            <div class="my-3 form-group">
                <input
                    name="oldPassword"
                    type="password"
                    class="form-control"
                    placeholder="Current password"
                    required
                />
            </div>

            <div class="my-3 form-group">
                <input name="newPassword" type="password" class="form-control" placeholder="New password" required />
            </div>

            <div class="mb-3 form-group">
                <input
                    name="confirm_password"
                    type="password"
                    class="form-control"
                    placeholder="Confirm new password"
                    required
                />
            </div>

            <div class="d-grid center mt-4 mb-3 form-group">
                <button type="submit" class="btn btn-success w-50 rounded submit">Submit</button>
            </div>
        </form>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>