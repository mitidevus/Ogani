<body>
  <div class="main">
    <section class="signup">
      <div class="container">
        <div class="signup-content" style="border-radius: 15px;">
          <form method="post" id="signup-form" class="signup-form">
            <h2 class="form-title">Create Account</h2>
            <div class="form-group">
              <input type="text" class="form-input" name="fullname" id="fullname" placeholder="Full name" required />
            </div>
            <div class="form-group">
              <input type="email" class="form-input" name="email" id="email" placeholder="Email" required />
            </div>
            <div class="form-group">
              <input type="text" class="form-input" name="address" id="address" placeholder="Address" required />
            </div>
            <div class="form-group">
              <input type="password" class="form-input" name="password" id="password"
                placeholder="Password (At least 6 characters)" required />
              <span toggle="#password" class="zmdi zmdi-eye field-icon toggle-password"></span>
            </div>
            <div class="form-group">
              <input type="password" class="form-input" name="re_password" id="re_password"
                placeholder="Confirm password" required />
              <span toggle="#re-password" class="zmdi zmdi-eye field-icon re-toggle-password"></span>
            </div>
            <div class="form-group">
              {{!-- <input style="cursor: pointer;" type="submit" name="submit" id="submit" class="form-submit"
                value="Login" /> --}}
              <button>Submit</button>
            </div>
          </form>

          {{#if error}}
          <div class="error">
            {{error}}
          </div>
          {{/if}}

          <p class="loginhere">
            Do you have account ?
            <a href="/auth/login" class="loginhere-link">Login</a>
          </p>
        </div>
      </div>
    </section>
  </div>

